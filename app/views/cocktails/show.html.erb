<h2><%= @cocktail.name %></h2>
<h3>List of doses:</h3>
<li>
<% @cocktail.doses.each do |dose|%>
  <ul><p><%=dose.description%> <%= dose.ingredient.name%></p></ul>
    <%= link_to "Remove",
                  dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
</li>
<% end %>
<p><%= link_to 'Add doses', new_cocktail_dose_path(@cocktail, @dose) %></p>

<p><%= link_to 'Return to drink index', cocktails_path %></p>
